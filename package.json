{
  "name": "MyApp",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/GA-MO/",
    "type": "git"
  },
  "author": "Thawatchai Kuansombat (thawatchai.deartk@gmail.com)",
  "license": "MIT",
  "scripts": {
    "dev": "better-npm-run dev",
    "build": "npm run clean && better-npm-run build",
    "build:client": "npm run clean && better-npm-run build:client",
    "start": "better-npm-run start",
    "clean": "better-npm-run clean",
    "test": "better-npm-run test"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./server/devServer.js --progress --hide-modules --config webpack.config.dev.js",
      "env": {
        "NODE_ENV": "development",
        "BUILD_ENV": "server"
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config webpack.config.production.js",
      "env": {
        "NODE_ENV": "production",
        "BUILD_ENV": "server"
      }
    },
    "build:client": {
      "command": "webpack --progress --hide-modules --config webpack.config.production.js",
      "env": {
        "NODE_ENV": "production",
        "BUILD_ENV": "client"
      }
    },
    "start": {
      "command": "node ./server/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "mocha ./test/*.js --compilers js:babel-register --watch"
    },
    "clean": {
      "command": "rimraf static"
    }
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "0.0.14",
    "es6-promise": "^4.0.5",
    "express": "^4.14.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.17.0"
  }
}
