{
  "name": "myapp",
  "version": "2.0.0",
  "description": "React starter boilerplate for SPA and SRR",
  "repository": {
    "url": "https://github.com/GA-MO/react-redux-gamo-boilerplate.git",
    "type": "git"
  },
  "author": "Thawatchai Kuansombat (thawatchai.deartk@gmail.com)",
  "license": "MIT",
  "scripts": {
    "dev": "better-npm-run dev",
    "build": "npm run clean && better-npm-run build",
    "build:client": "npm run clean && better-npm-run build:client",
    "start": "better-npm-run start",
    "clean": "better-npm-run clean",
    "test": "npm run lint && better-npm-run test",
    "test:watch": "better-npm-run test:watch",
    "lint": "eslint ./app"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./scripts/devServer.js --config ./configs/webpack.config.dev.js",
      "env": {
        "NODE_ENV": "development",
        "BUILD_ENV": "server"
      }
    },
    "build": {
      "command": "webpack --hide-modules --config ./configs/webpack.config.production.js",
      "env": {
        "NODE_ENV": "production",
        "BUILD_ENV": "server"
      }
    },
    "build:client": {
      "command": "webpack --hide-modules --config ./configs/webpack.config.production.js",
      "env": {
        "NODE_ENV": "production",
        "BUILD_ENV": "client"
      }
    },
    "start": {
      "command": "node ./scripts/start.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "mocha ./app/**/*.test.js --compilers js:babel-register"
    },
    "test:watch": {
      "command": "mocha ./app/**/*.test.js --compilers js:babel-register --watch"
    },
    "clean": {
      "command": "rimraf build"
    }
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "8.2.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "0.1.0",
    "es6-promise": "^4.0.5",
    "express": "^4.14.1",
    "ignore-styles": "^5.0.1",
    "prop-types": "^15.6.0",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-helmet": "^5.0.3",
    "react-hot-loader": "4.1.3",
    "react-redux": "5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "4.0.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0",
    "webpack-isomorphic-tools": "^3.0.5"
  },
  "devDependencies": {
    "chalk": "2.3.2",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-react": "6.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-react": "7.8.2",
    "eslint-plugin-standard": "3.1.0",
    "expect": "^22.4.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "mocha": "5.1.1",
    "node-sass": "4.9.0",
    "react-dev-utils": "5.0.1",
    "rimraf": "^2.5.4",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "url-loader": "1.0.1",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.2"
  }
}
